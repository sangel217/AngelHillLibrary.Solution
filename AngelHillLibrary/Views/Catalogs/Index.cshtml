@{ Layout = "_Layout"; }
@using AngelHillLibrary.Models;

<h1>Angel Hill Library</h1>
<hr />

<h2>Books:</h2>

@if (@Model.Count != 0)
{
  <ul>
    @foreach (var catalog in @Model)
    {
      <li><a href="/catalogs/@catalog.GetId()">@catalog.GetTitle()</a></li>
    }
  </ul>
}

<h4><a href="/search_by_title">Search by title</a></h4>
<h4><a href="/catalogs/new">Add a new book</a></h4>
<h4><a href="/">Return home</a></h4>
