@using AngelHillLibrary.Models;
@{ Layout = "_Layout"; }

<h1>Angel Hill Library</h1>
<hr />
<h2>Authors:</h2>

@if (@Model.Count != 0)
{
  <ul>
    @foreach (var author in @Model)
    {
      <li><a href='/authors/@author.GetId()'>@author.GetAuthorName()</a></li>
    }
  </ul>
}

<h4><a href="/authors/new">Add new author</a></h4>
<h4><a href="/">Return home</a></h4>
