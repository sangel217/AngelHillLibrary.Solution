@{ Layout = "_Layout"; }

<h1>Angel Hill Library</h1>
<hr />

<h2>Edit author: @Model["author"].GetAuthorName()</h2>

<form action="/catalogs/@Model["catalog"].GetId()/authors/@Model["author"].GetId()" method="post">
  <label for="newAuthorName">Name:</label>
  <input type="text" name="newAuthorName" value="@Model["author"].GetAuthorName()">
  <button type="submit">Edit</button>
</form>

<h4><a href="/catalogs/@Model["catalog"].GetId()/authors/@Model["author"].GetId()">Return to previous page</a></h4>
